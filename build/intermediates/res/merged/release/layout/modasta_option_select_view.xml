<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/modasta_label"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Modasta"
        android:textSize="19dp" />

    <View
        android:id="@+id/global_view_as_seprator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/modasta_label"
        android:background="#888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/global_view_as_seprator"
        android:background="#ECECf1"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- Lab -->
        <RelativeLayout
            android:id="@+id/view_group_lab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/lab_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/labtest_icon" />

            <TextView
                android:id="@+id/lab_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lab_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Lab Test"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Health 360 -->
        <RelativeLayout
            android:id="@+id/view_group_health"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="visible">

            <View
                android:layout_width="0.5dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#888888" />

            <ImageView
                android:id="@+id/health_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ico_h360" />

            <TextView
                android:id="@+id/health_360"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/health_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Health 360"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <!-- Video -->
        <RelativeLayout
            android:id="@+id/view_group_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="visible">

            <View
                android:layout_width="0.5dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#888888" />

            <ImageView
                android:id="@+id/video_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_video_home" />

            <TextView
                android:id="@+id/video_couns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Video Consultation"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Video -->
        <RelativeLayout
            android:id="@+id/view_group_text_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/right_view_1"
            android:layout_weight="0.25"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:visibility="visible">

            <View
                android:layout_width="0.5dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="#888888" />

            <ImageView
                android:id="@+id/text_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/modasta_text_query" />

            <TextView
                android:id="@+id/text_couns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Text Consultation"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>